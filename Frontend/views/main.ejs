<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tienda de Abarrotes</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="header-actions">
        <nav>
            <% if(!usuarioID) { %>
                <a href="/iniciarSs" class="btn-iniciar-sesion">Iniciar Sesión</a>   
                <% } else { %>
                    <a href="/carrito/<%= usuarioID %>" class="btn-carrito">Ver Carrito</a>
                    <a href="/historial/<%= usuarioID %>" class="btn-historial">Ver Historial</a>
                    <a href="/cuenta/<%= usuarioID %>" class="btn-cuenta">Mi Cuenta</a>
            <% } %>
        </nav>
    </div>
    
    <h1>Nuestros productos:</h1>
    <div class="container-productos">
        <% if(productos.length === 0) { %>
            <p>No hay productos disponibles en este momento.</p>
        <% } else { %>
            <% productos.forEach(function(item) { %>
                <div class="caja-producto">
                    <div class="definicion-producto">
                        <h2><%= item.nombre %></h2>
                        <p>Precio: $<%= item.precio %></p>
                        <p>Categoria: <%= item.categoria %></p>
                        <p>Cantidad disponible: <%= item.stock %></p>
                    </div>
                    <% if(usuarioID) { %>
                        <form method="POST" action="/carrito/<%= usuarioID %>/agregar">
                            <input type="hidden" name="NombreProducto" value="<%= item.nombre %>">
                            <input type="number" name="cantidad" min="1" max="<%= item.stock %>" value="1" required>
                            <button type="submit" class="agregar-carrito">Agregar al carrito</button>
                        </form>
                    <% } else { %>
                        <a href="/iniciarSs" class="btn-iniciar-sesion">Inicia sesión para comprar</a>
                    <% } %>
                </div>
        <% }); %>
        <% } %>
    </div>
</body>
</html>