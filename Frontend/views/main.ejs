<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tienda de</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h1>Nuestros productos:</h1>
    <div class="container-productos">
        <% inventario.forEach(function(inventario) { %>
            <div class="caja-producto">
                <div class="definicion-producto">
                    <h2><%= inventario.Nombre %></h2>
                    <p>Precio: $<%= inventario.Precio %></p>
                    <p>Categoria: <%= inventario.Categoria %></p>
                    <p>Cantidad disponible: <%= inventario.Stock %></p>
                </div>
                <button class="agregar-carrito" data-id="<%= inventario.ID %>">Agregar al carrito</button>
            </div>
        <% }); %>
    </div>
</body>
</html>