<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tienda de Abarrotes</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="header-actions">
        <nav>
            <% if(!usuarioID) { %>
                <a href="/iniciarSs" class="btn-iniciar-sesion">Iniciar Sesión</a>
                <% } else{ %>
                    <a href="/carrito/<%= usuarioID %>" class="btn-carrito">Ver Carrito</a>
                    <a href="/historial/<%= usuarioID %>" class="btn-historial">Ver Historial</a>
                    <a href="/cuenta/<%= usuarioID %>" class="btn-cuenta">Mi Cuenta</a>
                    
                    <%  if(usuarioID === '0') { %>
                    
                        <a href="/manipularProductos" class="btn-productos">Administrar Productos</a>
                    <% } %>
            <% } %>
        </nav>
    </div>

    <!-- Decoración del header -->
    <div class="header-decoration">
        <img src="/images/decorations/maceta-terracota.png" alt="Decoración" onerror="this.style.display='none'">
        <img src="/images/decorations/planta-monstera.png" alt="Decoración" onerror="this.style.display='none'">
        <img src="/images/decorations/maceta-verde.png" alt="Decoración" onerror="this.style.display='none'">
    </div>

    <h1>Nuestros productos:</h1>
    <div class="container-productos">
        <% if(productos.length === 0) { %>
            <div class="empty-state">
                <img src="/images/decorations/regadera.png" alt="Sin productos" class="empty-state-image" onerror="this.style.display='none'">
                <p>No hay productos disponibles en este momento.</p>
            </div>
        <% } else { %>
            <% productos.forEach(function(item) { %>
                <div class="caja-producto">
                    <div class="definicion-producto">
                        <h2><%= item.nombre %></h2>
                        <p>Precio: $<%= item.precio %></p>
                        <p>Categoria: 
                            <% switch(item.categoria) {
                                case 1:
                                    %>Plantas de interior<%
                                    break;
                                case 2:
                                    %>Plantas de exterior<%
                                    break;
                                case 3:
                                    %>Herramientas<%
                                    break;
                                case 4:
                                    %>Macetas<%
                                    break;
                                case 5:
                                    %>Fertilizantes y sustratos<%
                                    break;
                                case 6:
                                    %>Semillas<%
                                    break;
                                case 7:
                                    %>Decoración de jardín<%
                                    break;
                                case 8:
                                    %>Riego<%
                                    break;
                                default:
                                    %>Otros<%
                            }
                        %>
                        </p>
                        <p>Cantidad disponible: <%= item.stock >= 0 ? item.stock : 'No disponible' %></p>
                    </div>
                    <% if(usuarioID) { %>
                        <form method="POST" action="/carrito/<%= usuarioID %>/agregar">
                            <input type="hidden" name="NombreProducto" value="<%= item.nombre %>">
                            <input type="number" name="cantidad" min="1" max="<%= Math.min(item.stock, 10) %>" value="1" required class="cantidad-input">
                            <% if(!item.stock || item.stock <= 0) { %>
                                <p class="sin-stock-mensaje">Producto sin stock</p>
                            <% } else { %>
                            <button type="submit" class="agregar-carrito" onclick="return agregarAlCarrito('<%= item.nombre %>', '<%= item.stock %>')">Agregar al carrito</button>
                            <% } %>
                        </form>
                    <% } else { %>
                        <a href="/iniciarSs" class="btn-iniciar-sesion">Inicia sesión para comprar</a>
                    <% } %>
                </div>
            <% }); %>
        <% } %>
    </div>
    <script src="/js/validaciones.js"></script>

    <!-- Decoración flotante lateral -->
    <div class="side-decoration">
        <img src="/images/decorations/macetas-variadas.png" alt="Decoración" onerror="this.style.display='none'">
    </div>
</body>
</html>