<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tu historial de compras</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container-carrito">
        <h1>Historial de Compras</h1>
        <a href="/?usuarioID=<%= usuarioID %>" class="btn-regresar">Regresar a la tienda</a>
        <div class="carrito-items">
            <% if(!ventas || ventas.length === 0) { %>
                <p>No has realizado ninguna compra a√∫n.</p>
            <% } else { %>
                <% ventas.forEach(function(compra) { %>
                    <div class="compra">
                        <h2>Compra ID: <%= compra.ID %></h2>
                        <p>Fecha de compra: <%= compra["fecha de compra"] %></p>
                        <ul>
                            <% if(compra.items && compra.items.length > 0) { %>
                                <% compra.items.forEach(function(item) { %>
                                    <li>
                                        <%= item.Nombre %> - Cantidad: <%= item.cantidad %> - Precio: $<%= item.Precio %> - Categoria: <%= item.Categoria %>
                                    </li>
                                <% }); %>
                            <% } %>
                        </ul>
                        <p>Total: $<%= compra["precio total"] %></p>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</body>
</html>