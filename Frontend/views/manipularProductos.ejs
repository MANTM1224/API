<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agrega, modifica o elimina productos</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h1>Administrar Productos</h1>
    <% if (typeof error !== 'undefined' && error) { %>
        <div id="toast" class="toast toast-error" role="alert" aria-live="assertive">
            <span class="toast-message"><%= error %></span>
            <button type="button" class="toast-close" aria-label="Cerrar">×</button>
        </div>
    <% } %>
    
    <div class="manipular-productos-layout">
        <!-- Formulario de Agregar Producto -->
        <div class="formulario-agregar-producto">
            <h2>Agregar Nuevo Producto</h2>
            <form id="addProductForm" method="POST" action="/admin/manipularProductos/agregar">
                <div class="form-group">
                    <label for="nombre">Nombre del producto:</label>
                    <input type="text" id="nombre" name="nombre" required>
                </div>

                <div class="form-group">
                    <label for="precio">Precio:</label>
                    <input type="number" id="precio" name="precio" step="0.01" max="10000" required>
                </div>

                <div class="form-group">
                    <label for="categoryid">Categoría ID:</label>
                    <input type="number" id="categoryid" name="categoryid" required>
                </div>

                <div class="form-group">
                    <label for="stock">Cantidad en stock:</label>
                    <input type="number" id="stock" name="stock" required>
                </div>

                <button type="submit" onclick="return validarProducto()">Agregar Producto</button>
            </form>
        </div>
        
        <!-- Lista de Productos -->
        <div class="lista-productos-admin">
            <h2>Productos Registrados</h2>
            <div class="container-productos">
        <% if(productos.length === 0) { %>
            <p>No hay productos registrados en este momento.</p>
        <% } else { %>
            <% productos.forEach(function(item) { %>
                <div class="caja-producto">
                    <div class="definicion-producto">
                        <h2><%= item.nombre %></h2>
                        <p>Precio: $<%= item.precio %></p>
                        <p>Categoria: <%= item.categoria %></p>
                        <p>Cantidad disponible: <%= item.stock %></p>
                    </div>
                    <a href="/admin/modificarProducto/<%= item.ID %>">Modificar la información</a>
                    <form method="POST" action="/admin/manipularProductos/eliminar/<%= item.ID %>" onsubmit="return confirm('¿Eliminar este producto?')">
                        <button type="submit" class="btn-eliminar-producto">Eliminar el producto</button>
                    </form>
                </div>
            <% }); %>
        <% } %>
    </div>
    <h2>Regresar <a href="/">a la tienda</a></h2>
    <script src="/js/validaciones.js"></script>
    <% if (typeof error !== 'undefined' && error) { %>
    <script>
        (function () {
            const toast = document.getElementById('toast');
            if (!toast) return;
            const closeBtn = toast.querySelector('.toast-close');
            const hide = () => toast.classList.add('toast-hide');
            if (closeBtn) {
                closeBtn.addEventListener('click', hide);
            }
            setTimeout(hide, 4000);
        })();
    </script>
    <% } %>
</body>
</html>